<!-- Main Calendar Page -->

<link href="/compiled/calendar.css" rel="stylesheet">
<aside>
        <!-- Prints the year
        <div class = "year-disp">{{context.year}}</div> -->

        <!-- Prints next and last buttons -->
        <div class = "button_housing">
            <a href="{{context.last}}" class="cycle-button prev_button">&laquo; Prev</a>  
            <label><span class="dates-text" id="current-Dates">{{context.weekDates.Mon}} &laquo;---{{context.month}} {{context.year}}---&raquo; {{context.weekDates.Sun}}</span></label>
            <a href="{{context.next}}" class="cycle-button next_button">Next &raquo;</a>
        </div> 
        
        <div class="requestVar">{{context.local}}</div>
        <div class="app container">
            <div class="app inner-div" id="cloud-calendar-app">
                <!--<div class="bar day-container" id="daylist-container">-->
                    <div class="uilist" id="daylist">
                        <!-- Prints the list of days --> 
                        <div class= "slot list-day splitter initial-slot" id="empty-cell"><span class="day blank-day"></span></div>
                        <div class="slot list-day mon"><div class= "list-day-block">Mon <span class='bigNum'>{{context.weekDates.Mon}}</span></div></div>
                        <!--<li class= "list-day splitter"><span class="day blank-day"></span></li>-->
                        <div class="slot list-day tue"><div class= "list-day-block">Tue <span class='bigNum'>{{context.weekDates.Tue}}</span></div></div>
                        <!--<li class= "list-day splitter"><span class="day blank-day"></span></li>-->
                        <div class="slot list-day wed"><div class= "list-day-block">Wed <span class='bigNum'>{{context.weekDates.Wed}}</span></div></div>
                        <!--<li class= "list-day splitter"><span class="day blank-day"></span></li>-->
                        <div class="slot list-day thu"><div class= "list-day-block">Thu <span class='bigNum'>{{context.weekDates.Thu}}</span></div></div>
                        <!--<li class= "list-day splitter"><span class="day blank-day"></span></li>-->
                        <div class="slot list-day fri"><div class= "list-day-block">Fri <span class='bigNum'>{{context.weekDates.Fri}}</span></div></div>
                        <!--<li class= "list-day splitter"><span class="day blank-day"></span></li>-->
                        <div class="slot list-day sat"><div class= "list-day-block">Sat <span class='bigNum'>{{context.weekDates.Sat}}</span></div></div>
                        <!--<li class= "list-day splitter"><span class="day blank-day"></span></li>-->
                        <div class="slot list-day sun"><div class= "list-day-block">Sun <span class='bigNum'>{{context.weekDates.Sun}}</span></div></div>
                    </div>
                <!--</div>-->
                <div class="columns" id="collumn-chart">
                    <!-- Prints the list of times along the left column -->
                    {{> time_list context}}
                    <!-- Prints the grid of days -->
                    {{! This will print out the Day Collumns}}
                    {{> day_grid context}}
                </div>
            
            </div>
        </div>
</aside>
